# Lightweight web service for Streamlit interface
FROM python:3.11-slim

# System dependencies for web service only
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Python dependencies for web interface
RUN pip install --no-cache-dir \
    streamlit \
    snowflake-connector-python \
    google-cloud-storage \
    google-cloud-run \
    google-cloud-secret-manager \
    cryptography \
    pandas \
    pyarrow \
    fastparquet \
    psutil \
    mime \
    altair>=5.0 \
    scikit-learn>=1.2 \
    statsmodels>=0.13


WORKDIR /app

# Copy only web application files
COPY app/ /app/
COPY requirements.txt /app/requirements.txt
COPY docker/web_entrypoint.sh /app/entrypoint.sh

RUN chmod +x /app/entrypoint.sh

# Environment for web service
ENV PORT=8080
ENV PYTHONPATH=/app
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0

EXPOSE 8080

ENTRYPOINT ["/app/entrypoint.sh"]
